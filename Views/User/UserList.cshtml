@model List<UserWithRoleNameListModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Kullanıcı Adı</th>
                <th scope="col">Roller</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.RoleName</td>
                    <td>
                        <a asp-action="AssignRole" asp-controller="User" asp-route-userId="@user.Id" class="btn btn-danger">Rol Ata</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



